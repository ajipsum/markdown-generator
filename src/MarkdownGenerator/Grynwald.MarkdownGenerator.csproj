<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    

    <!-- NuGet package properties-->
    <Authors>Andreas Gruenwald</Authors>
    <PackageProjectUrl>https://github.com/ap0llo/markdown-generator</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/ap0llo/markdown-generator/blob/master/LICENSE</PackageLicenseUrl>
    <Description>A utility library to programatically generate markdown files</Description>

    <DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <NoWarn>$(NoWarn),1591</NoWarn>

    <!-- SourceLink (https://github.com/dotnet/sourcelink) settings -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>    
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

  </PropertyGroup>

  <!-- Include source link -->
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-62925-02" PrivateAssets="All" />
  </ItemGroup>


  <Target Name="RunInheritDoc" 
          Condition="'$(TargetFramework)' != '' AND '$(RunInheritDocOnBuild)'  == 'true' "
          AfterTargets="Build" >
    <Message Importance="High" Text="Running inheritdoc " />
    <Exec Command="dotnet tool run inheritdoc --overwrite --base $(OutputPath) " />
  </Target>

</Project>
